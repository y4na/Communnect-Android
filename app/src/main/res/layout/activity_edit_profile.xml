<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_ellipse_page"
    tools:context=".EditProfile">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="181dp"
        android:layout_height="45dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="750dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Edit Profile"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="500dp"
        app:cardCornerRadius="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4ABA9E"
            app:srcCompat="@drawable/user_default" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnImagePicker"
        android:layout_width="143dp"
        android:layout_height="37dp"
        android:layout_marginBottom="96dp"
        android:background="@drawable/white_rectangle_ds"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Upload Image"
        android:textColor="@color/greenText"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="371dp"
        android:layout_height="324dp"
        android:background="@drawable/white_rectangle_ds"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.874">

        <TextView
            android:id="@+id/textFname"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="@string/fname"
            android:textColor="#2C2C2C" />

        <EditText
            android:id="@+id/editTextFirstname"
            android:layout_width="310dp"
            android:layout_height="41dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custom_textfield"
            android:ems="10"
            android:fontFamily="@font/montserrat_regular"
            android:inputType="text"
            android:padding="10sp"
            android:text=""
            android:textColor="#222423"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textLname"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="@string/lname"
            android:textColor="#2C2C2C" />

        <EditText
            android:id="@+id/editTextLastName"
            android:layout_width="310dp"
            android:layout_height="41dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custom_textfield"
            android:ems="10"
            android:fontFamily="@font/montserrat_regular"
            android:inputType="text"
            android:padding="10sp"
            android:text=""
            android:textColor="#222423"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnsaveeditprof"
            android:layout_width="310dp"
            android:layout_height="41dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/gradient_btn"
            android:fontFamily="@font/montserrat_semibold"
            android:text="@string/save_changes"
            android:textAllCaps="false"
            android:textColor="@color/white" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>